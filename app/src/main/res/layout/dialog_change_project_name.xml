<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_20"
    android:background="@drawable/card_light"
    android:orientation="vertical"
    android:padding="@dimen/spacing_20">

    <View
        android:layout_width="300dp"
        android:layout_height="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_20"
        android:fontFamily="sans-serif-medium"
        android:text="Change Name"
        android:textColor="@color/tx_dark"
        android:textSize="@dimen/txt_mlarge" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_44"
        android:layout_marginBottom="@dimen/spacing_12"
        android:background="@drawable/edit_text"
        android:hint="Project new name"
        android:inputType="text"
        android:maxLength="50"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/tx_dark"
        android:textColorHint="@color/tx_soft" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_40"
            android:background="@drawable/button_primary"
            android:text="UPDATE"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>